<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="styles/main.css">
    <script>
        function showUpdateForm(){
            document.getElementById("updateForm").style.display = 'block';
            document.getElementById("heading-title").style.display = 'block';
            document.getElementsByClassName("details")[0].style.display = 'none';
        }
    </script>
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="details" style="display: block;">
        <h1><%- title %></h1>
        <p><%- content %></p>
        <div class="options">
            <div class="update-button">
                <button type="submit" onclick="showUpdateForm()">Update</button>
            </div>
            <div class="delete-button">
                <form action="/blog/delete" method="POST">
                    <input type="hidden" name="title" value="<%- title %>">
                    <input type="hidden" name="content" value="<%- content %>">
                    <button type="submit" value="delete">Delete</button>
                </form>
            </div>
        </div>
    </div>
    <h1 id="heading-title" style="display: none;text-align: center;"><%- title %></h1>
    <form action="/blog/update" method="POST" style="display: none" id="updateForm">
        <input type="hidden" name="originalTitle" value="<%- title %>">
        <textarea name = "content" rows="20" cols="50"><%- content %></textarea>
        <div class="button">
            <button type="submit">Update</button>
        </div>
    </form>
    
    <%- include("partials/footer.ejs") %>
</body>
</html>
